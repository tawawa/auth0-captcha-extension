html
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    style(type='text/css').
      html {
      font-family: sans-serif;
      -webkit-text-size-adjust: 100%;
      -ms-text-size-adjust: 100%;
      }
      body { margin: 0; }
      .container { padding-right: 15px; padding-left: 15px;margin-right: auto; margin-left: auto; }
      h1 { margin: .67em 0; font-size: 2em; font-family: inherit; font-weight: 500; line-height: 1.1; color: inherit; }
    title Confirm you are human
    // Latest compiled and minified CSS
    script(src='https://www.google.com/recaptcha/api.js')
  body
    script(type='text/javascript').
      var submitform = function() {
        document.getElementById("captchaform").submit();
      };
    .container
      form#captchaform.form-signin(action=target, method='POST')
        h1 title
        p message
        input(type='hidden', value=state, name='state')
        input(type='hidden', value=token, name='token')
        .g-recaptcha(data-sitekey=siteKey, data-callback='submitform')

